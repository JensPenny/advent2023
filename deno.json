{
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "lock": false,
  "nodeModulesDir": true,
  "npmRegistry": "https://mycompany.net/artifactory/api/npm/virtual-npm",
  "test": {
    "include": ["src/", "src/tools/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "tasks": {
    "start": "deno run --allow-read main.ts",
    "day1": "deno run -A src/day1/day1.ts",
    "day2": "deno run -A src/day2/day2.ts",
    "day3": "deno run -A src/day3/day3.ts",
    "day4": "deno run -A src/day4/day4.ts",
    "day5": "deno run -A src/day5/day5.ts",
    "day6": "deno run -A src/day6/day6.ts", 
    "day7": "deno run -A src/day7/day7.ts",
    "day8": "deno run -A src/day8/day8.ts",
    "day9": "deno run -A src/day9/day9.ts", 
    "day10": "deno run -A src/day10/day10.ts",
    "day11": "deno run -A src/day11/day11.ts"
  },
  "imports": {}
}
